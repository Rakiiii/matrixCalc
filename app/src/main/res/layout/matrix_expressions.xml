<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/leftMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/operationSignm"
    />
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/operationSignm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/leftMatrix"
            app:layout_constraintEnd_toStartOf="@id/rightMatrix"
    />
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rightMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/operationSignm"
            app:layout_constraintEnd_toStartOf="@id/resMatrix"
    />
    <TextView
            android:id="@+id/resMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/rightMatrix"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>